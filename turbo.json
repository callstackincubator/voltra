{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "cache": false
    },
    "lint": {},
    "lint:libOnly": {},
    "format:check": {},
    "generate": {
      "outputs": ["src/**/*.generated.ts"]
    },
    "clean": {
      "cache": false
    }
  }
}
